    <div id="searchinputdata">
        <div id="title" class="add-margins">
            <label class="large-white-text">
                Compare cloudware</label>
        </div>
        <div id="criteria" class="add-margins">
            <div class="simple-search-first-column">
                <div id="search-input-text" class="add-margins">
                    @Html.TextBoxFor(x => x.Firstname)
                    @Html.ValidationMessageFor(model => model.Firstname)
                </div>
                <div class="styled-select">
                    @Html.DropDownListFor(x => x.ChosenCategoryID,
                       new SelectList(Model.Categories, "CategoryID", "CategoryName", Model.ChosenCategoryID)
                    )
                </div>
            </div>
            <div class="simple-search-second-column">
                <div id="search-input-text" class="add-margins">
                    @Html.TextBoxFor(x => x.EMailAddress)
                    @Html.ValidationMessageFor(model => model.EMailAddress)
                </div>
                <div class="styled-select add-margins">
                    @Html.DropDownListFor(x => x.ChosenNumberOfUsers,
                       new SelectList(Model.NumberOfUsers, "UserValue", "UserValue", Model.ChosenNumberOfUsers)
                    )
                </div>
                <div class="add-margins">
                    <input class="cloud-compare-button-red" type="submit" value="Compare Cloudware" />
                </div>
            </div>
        </div>
    </div>
</div>


